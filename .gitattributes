# Convert to LF line endings on checkout.
*.md text eol=lf
*.py text eol=lf
*.r text eol=lf
*.rmd text eol=lf
*.rscript text eol=lf
*.R text eol=lf
*.Rmd text eol=lf
*.Rscript text eol=lf
*.sh text eol=lf

# encoding UTF-8
*.md encoding=utf-8
*.py encoding=utf-8
*.r encoding=utf-8
*.rmd encoding=utf-8
*.rscript encoding=utf-8
*.R encoding=utf-8
*.Rmd encoding=utf-8
*.Rscript encoding=utf-8
*.sh encoding=utf-8
